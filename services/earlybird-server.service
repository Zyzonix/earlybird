[Unit]
Description=earlybird (/opt/earlybird) - Server Application: http://<hostname>
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0
 
[Service]
Type=forking
Restart=always
RestartSec=1
User=root
ExecStart=/opt/earlybird server
ExecStop=SIGINT
StandardOutput=file:/var/log/earlybird/webclient.log
StandardError=file:/var/log/earlybird/webclient.log
 
[Install]
WantedBy=multi-user.target